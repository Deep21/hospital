{% extends 'base.html.twig' %}

{% set page_title = 'Add a patient' %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}

        <div class="alert alert-success" role="alert">
            {{ flashMessage | trans }}
        </div>

    {% endfor %}


    <div id="patient_type_address" class="form-control">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-13">
                <div class="form-group">

                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr':{'class': 'form-control', 'placeholder': 'form.placeholder.email'|trans} }) }}
                    {{ form_errors(form.email,  {'attr':{'class': 'alert alert-warning'} }) }}
                    <small id="emailHelp" class="form-text text-muted">You can't register a patient with an existing
                        e-mail
                        address
                    </small>
                </div>
                <div class="col-sm-13">
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName, {'attr':{'class': 'form-control','placeholder': 'form.placeholder.firstname'|trans}}) }}
                    {{ form_errors(form.firstName) }}
                    <small id="emailHelp" class="form-text text-muted">First Name field have to be set.</small>
                </div>
                <div class="col-sm-13">
                    {{ form_label(form.lastName) }}
                    {{ form_widget(form.lastName, {'attr':{'class': 'form-control','placeholder': 'form.placeholder.lastname'|trans} }) }}
                    {{ form_errors(form.lastName) }}
                    <small id="emailHelp" class="form-text text-muted">Last Name field have to be set.</small>
                </div>
                <div class="col-sm-13">
                    {{ form_label(form.birthday) }}
                    {{ form_widget(form.birthday, {'attr':{'class': 'form-control','placeholder': 'form.placeholder.birthday'|trans} }) }}
                    {{ form_errors(form.birthday) }}
                </div>
                <div class="col-sm-13">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone, {'attr':{'class': 'form-control','placeholder': 'form.placeholder.phone'|trans} }) }}
                    {{ form_errors(form.phone) }}
                </div>
                <div class="col-sm-13">
                    {{ form_label(form.phoneMobile) }}
                    {{ form_widget(form.phoneMobile, {'attr':{'class': 'form-control','placeholder': 'form.placeholder.phone_mobile'|trans}} ) }}
                    {{ form_errors(form.phoneMobile) }}
                    <small id="emailHelp" class="form-text text-muted">Phone mobile field have to be set.</small>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix">
        <div class="form-group">
            {{ form_widget(form.address, {'attr':{'class': 'form-control'} }) }}
            {{ form_errors(form.address) }}
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
    </div>
    {#{{ form_widget(form.save, {'attr':{'class': 'btn btn-primary'}} ) }}#}
    {{ form_end(form) }}
{% endblock %}